{
  "compilerOptions": {
    "types": ["expo-router"],
    "target": "esnext",
    "module": "Node16",
    "strict": true,
    "jsx": "react",
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["app/components/*"],
      "@features/*": ["app/features/*"],
      "@screens/*": ["app/screens/*"],
      "@services/*": ["services/*"],
      "@theme/*": ["theme/*"],
      "@assets/*": ["app/assets/*"],
      "@customTypes/*": ["types/*"]
    }
  },
  "extends": "expo/tsconfig.base"
}
